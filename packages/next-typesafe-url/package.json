{
  "name": "next-typesafe-url",
  "description": "Fully typesafe, JSON serializable, and zod validated URL search params, dynamic route params, and routing for NextJS pages directory",
  "license": "MIT",
  "version": "6.0.0",
  "author": "Ethan Niser",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethanniser/next-typesafe-url"
  },
  "homepage": "https://next-typesafe-url.dev",
  "keywords": [
    "next",
    "nextjs",
    "urlSearchParams",
    "typesafe",
    "typescript",
    "zod"
  ],
  "bin": "./dist/cli.js",
  "types": "./root.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./pages": {
      "require": "./dist/pages.js",
      "import": "./dist/pages.mjs"
    },
    "./app": {
      "require": "./dist/app/index.js",
      "import": "./dist/app/index.mjs"
    },
    "./app/hoc": {
      "require": "./dist/app/hoc.js",
      "import": "./dist/app/hoc.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "pages": [
        "./dist/pages.d.ts"
      ],
      "app": [
        "./dist/app/index.d.ts"
      ],
      "app/hoc": [
        "./dist/app/hoc.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc",
    "dev": "npm run build -- --watch",
    "test:watch": "vitest",
    "test": "vitest run",
    "lint": "eslint src/**",
    "publish:beta": "npm publish --tag beta",
    "clean:dist": "rm ./dist -r"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "cosmiconfig": "^9.0.0",
    "jiti": "^1.21.0",
    "meow": "9.0.0"
  },
  "devDependencies": {
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "eslint": "8.45.0",
    "next": "13.4.12",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tsup": "7.1.0",
    "typescript": "5.1.3",
    "zod": "4.1.12"
  },
  "peerDependencies": {
    "next": "^13.4.12  || ^14.0.0 || ^15.0.0",
    "react": "^18.2.0 || ^19.0.0",
    "zod": "^4.1.12"
  }
}
